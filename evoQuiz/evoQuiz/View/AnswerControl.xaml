<UserControl x:Class="evoQuiz.View.AnswerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:evoQuiz.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Command="{Binding AnswerClickCommand}"
                Content="{Binding Path=AnswerText}"
                Style="{StaticResource PixelButton}"
                FontSize="20"
         >
            <Button.Background>
                <ImageBrush RenderOptions.BitmapScalingMode="NearestNeighbor" ImageSource="/Images/answer.png" Stretch="Fill"/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
