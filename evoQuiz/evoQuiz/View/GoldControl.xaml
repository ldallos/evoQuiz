<UserControl x:Class="evoQuiz.View.GoldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:evoQuiz.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Image Source="/Images/goldcounter.png" Stretch="Fill" Grid.RowSpan="2"></Image>
        <TextBlock Style="{StaticResource PixelText}" Text="{Binding Path=GoldCount}" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"></TextBlock>    
    </Grid>
</UserControl>
